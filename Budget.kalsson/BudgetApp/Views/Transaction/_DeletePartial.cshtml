@model BudgetApp.Models.Transaction

<div class="modal-header">
    <h5 class="modal-title">Delete Transaction</h5>
    <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
</div>
<div class="modal-body">
    <form asp-action="Delete" method="post">
        <input type="hidden" asp-for="Id" />
        <p>Are you sure you want to delete this transaction?</p>
        <dl class="row">
            <dt class="col-sm-3">Name</dt>
            <dd class="col-sm-9">@Html.DisplayFor(model => model.Name)</dd>
            <dt class="col-sm-3">Amount</dt>
            <dd class="col-sm-9">@Html.DisplayFor(model => model.Amount)</dd>
            <dt class="col-sm-3">Date</dt>
            <dd class="col-sm-9">@Html.DisplayFor(model => model.Date)</dd>
            <dt class="col-sm-3">Category</dt>
            <dd class="col-sm-9">@Html.DisplayFor(model => model.Category.Name)</dd>
        </dl>
        <button type="submit" class="btn btn-danger mt-3">Delete</button>
    </form>
</div>